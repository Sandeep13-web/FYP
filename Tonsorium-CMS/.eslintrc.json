{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "template-curly-spacing" : "off",
        "indent": ["error", 2, {
            "ignoredNodes": ["TemplateLiteral"]
        }],
        "comma-dangle": [
            "error",
            "never"
        ],
        "curly": [
            "error",
            "all"
        ],
        //        "camelcase": ["error", { "properties": "never" }],
        "no-var": [
            "error"
        ],
        "no-cond-assign": [
            "error",
            "always"
        ],
        "init-declarations": "off"
    },
    "ignorePatterns": [
        "node_modules/",
        "resources/assets/",
        "public/",
        "src/database/seeders/20210801144222-postalCodeSeeder.js",
        "test"
    ]
}
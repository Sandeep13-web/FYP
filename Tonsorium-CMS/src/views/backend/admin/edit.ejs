<!-- Main Content-->
<div class="main-content side-content pt-5">
    <div class="container-fluid">
        <div class="inner-body">
                <!-- Page Header -->
                <div class="page-header sticky-header">
                    <div>
                        <h2 class="main-content-title tx-24 mg-b-5"><%= translateLanguage(pageTitle,  session.translationdata) %></h2>
                        <% include ../partials/breadcrumb %>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn main-save-btn btn-icon-text my-2 mr-2 submit submitEmployeeEditForm"
                                type="button"><%= translateLanguage('Save',  session.translationdata) %></button>

                        <a  href="<%= session?.cancelUrl || '/admins'%>" role="button">
                            <button class="btn main-cancel-btn btn-icon-text my-2 mr-2" type="button">
                                    <%= translateLanguage('Cancel',  session.translationdata) %>
                            </button>
                        </a>

                    </div>
                </div>
                <!-- End Page Header -->
                <!-- Row -->
                <div class="row row-sm">
                    <div class="col-lg-12">
                        <% include ../partials/messages %>
                        <div class="card custom-card">
                                <form action="/admins/<%= admin._id %>?_method=PUT" class="form employeeEditForm" method="post" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <div class="inner__card_b1">
                                            <div class="row align-items-baseline mt-3">
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('First Name',  session.translationdata) %></b>
                                                                <span style="color:red;">*</span>
                                                            </p>
                                                            <input type="text" class="form-control "
                                                                name="first_name"
                                                                value="<%= inputData && inputData.first_name ? inputData.first_name :  admin.first_name  %>" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Last Name', session.translationdata) %></b>
                                                                <span style="color:red;">*</span>
                                                            </p>
                                                            <input type="text" class="form-control"
                                                                name="last_name"
                                                                value="<%= inputData && inputData.last_name ? inputData.last_name :  admin.last_name  %>" required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Email',  session.translationdata) %></b>
                                                                <span style="color:red;">*</span>
                                                            </p>
                                                            <input type="email" class="form-control " name="email"
                                                                value="<%= inputData && inputData.email ? inputData.email : admin.email %>" required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Username',  session.translationdata) %></b>
                                                                <span style="color:red;">*</span>
                                                            </p>
                                                            <input type="text" class="form-control " name="username"
                                                                value="<%= inputData && inputData.username ? inputData.username : admin.username %>"
                                                                required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Telephone No', session.translationdata) %></b>
                                                                <span style="color:red;">*</span>
                                                            </p>
                                                            <input type="tel"
                                                                class="form-control" name="contact_number" maxlength="13" onkeypress='return isNumberKey(event)'
                                                                value="<%= inputData && inputData.contact_number ? inputData.contact_number : admin.contact_number %>"
                                                                required>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Mobile No', session.translationdata) %></b>
                                                            </p>
                                                            <input type="tel"
                                                                class="form-control " name="mobile_num" maxlength="13"  onkeypress='return isNumberKey(event)'
                                                                value="<%= inputData && inputData.mobile_num ? inputData.mobile_num : admin.mobile_num %>">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row align-items-baseline ">
                                                <script>
                                                    function isNumberKey(evt){
                                                    var charCode = (evt.which) ? evt.which : evt.keyCode;
                                                    if (charCode != 46 && charCode != 45 && charCode > 31
                                                    && (charCode < 48 || charCode > 57))
                                                    return false;
                                        
                                                     return true;
                                                }
                                                    </script>
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Fax', session.translationdata) %></b>
                                                            </p>
                                                            <input type="text"
                                                                class="form-control onlynumIncludeDash" name="fax" maxlength="13"
                                                                value="<%= inputData && inputData.fax ? inputData.fax : admin.fax %>">
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                            </div>

                                            <div class="row align-items-baseline ">
                                                <% if(admin._id !== MAINSUPERADMIN) { %>
                                                    <div class="col-lg-6">
                                                        <div class="inner__border">
                                                            <div class="form-group form-check d-flex align-items-baseline">
                                                                <p class="inner__card">
                                                                    <b><%= translateLanguage('Admin Roles',  session.translationdata) %></b>
                                                                    <span style="color:red;">*</span>
                                                                </p>
                                                                <select class="form-control select2" multiple name="role_id" required>
                                                                    <% roles.forEach(function(role) { %>
                                                                        <option value="<%= role.id %>" 
                                                                            
                                                                        <%= (admin && admin.role_id === role.id) ? 'selected' : ''%>
                                                                    
                                                                        <%if( typeof (selectedRoles) != "undefined" && selectedRoles.includes(role.id)){%>
                                                                            selected
                                                                        <%}%> >
                                                                        <% if(typeof(inputData) !== "undefined" && inputData.role_id.toString().includes(role.id)){ %> 
                                                                            selected
                                                                        <% } %> 
                                                                        <%= role.name %></option>
                                                                    <% }); %>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <%}%>
                                                
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Image',  session.translationdata) %></b>
                                                            </p>
                                                            <input class="form-control" type="file" id="image" name="image"
                                                                style="padding: 2px;"
                                                                accept="image/png, image/jpeg, image/jpg">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card exp">
                                                                <b><%= translateLanguage('Status', session.translationdata) %></b>
                                                            </p>

                                                                <div class="extra">
                                                                    <div class="col-md-2">
                                                                        <div class="form-check form-group d-flex b-b0">
                                                                            <input class="form-check-input" type="radio" name="status"
                                                                                value="active" <%= admin.status=='active'?'checked': '' %>>
                                                                            <label class="form-check-label text-nowrap" for="status">
                                                                                <%= translateLanguage('Active', session.translationdata) %>
                                                                            </label>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-md-2">
                                                                        <div class="form-check form-group d-flex b-b0">
                                                                            <input class="form-check-input" type="radio" name="status"
                                                                                value="inactive" <%= admin.status=='inactive'?'checked': '' %>>
                                                                            <label class="form-check-label text-nowrap" for="status">
                                                                                <%= translateLanguage('Inactive', session.translationdata) %>
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b><%= translateLanguage('Remarks', session.translationdata) %></b>
                                                            </p>
                                                            <textarea name="remarks" id="" class="form-control" style="height: 60px;"><%= inputData && inputData.remarks ? inputData.remarks : admin.remarks %></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                        </div>
                    </div>
                </div>

        </div>
        <!-- End Row -->

    </div>

</div>
<script src="/js/employee.js" defer></script>

<!-- End Main Content-->
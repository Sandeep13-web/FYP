<!-- Main Content-->
<div class="main-content side-content pt-5">
    <div class="container-fluid">
        <div class="inner-body">
            <form action="/employee-master/<%= admin._id %>/change-password?_method=PUT" method="post">
                <!-- Page Header -->
                <div class="page-header">
                    <div>
                        <h2 class="main-content-title tx-24 mg-b-5">
                            <%= translateLanguage(pageTitle, session.translationdata) %>
                        </h2>
                        <% include ../partials/breadcrumb %>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn main-save-btn btn-icon-text my-2 mr-2" type="submit">
                            <%= translateLanguage('Save', session.translationdata) %>
                        </button>

                        <a href="/employee-master" role="button">
                            <button  class="btn main-cancel-btn btn-icon-text my-2 mr-2" type="button">
                            <%= translateLanguage('Cancel', session.translationdata) %></button>
                        </a>

                    </div>
                </div>
                <!-- End Page Header -->
                <!-- Row -->
                <div class="row row-sm">
                    <div class="col-lg-12">
                        <% include ../partials/messages %>
                            <div class="card custom-card">
                                <input type="hidden" name="_csrf" value="<%-csrfToken%>">
                                <div class="card-body">
                                    <div class="inner__card_b1">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class="form-group form-check d-flex align-items-baseline">
                                                        <p class="inner__card">
                                                            <b>
                                                                <%= translateLanguage('New Password',
                                                                    session.translationdata) %>
                                                            </b>
                                                        </p>
                                                        <input type="password" class="form-control" id="password"
                                                            name="password" required
                                                            minlength="<%= getCmsConfig(configData,'Minimum Password Length') %>">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class="form-group form-check d-flex align-items-baseline">
                                                        <p class="inner__card">
                                                            <b>
                                                                <%= translateLanguage('Confirm New Password',
                                                                    session.translationdata) %>
                                                            </b>
                                                        </p>
                                                        <input type="password" class="form-control" id="confirmPassword"
                                                            name="confirm_password" required
                                                            minlength="<%= getCmsConfig(configData,'Minimum Password Length') %>">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class="form-group form-check d-flex align-items-baseline">
                                                        <p class="inner__card">
                                                            <b>
                                                                <%= translateLanguage("Show password reset screen after login",session.translationdata, 'ログイン後にパスワードリセット画面を表示する') %>
                                                            </b>
                                                        </p>
                                                        <div class="col-md-1">
                                                            <input type="checkbox" class="form-control" style="height: 15px !important;" name="show_reset_password">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-12">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- End Row -->

    </div>

</div>
<!-- End Main Content-->
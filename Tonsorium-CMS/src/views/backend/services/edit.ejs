<!-- Main Content-->
<div class="main-content side-content pt-5">
    <div class="container-fluid">
        <div class="inner-body">
            <form action="/services/<%= data._id %>?_method=PUT" method="post">
                <!-- Page Header -->
                <div class="page-header sticky-header">
                    <div>
                        <h2 class="main-content-title tx-24 mg-b-5">
                            <%= translateLanguage(pageTitle, session.translationdata) %>
                        </h2>
                        <% include ../partials/breadcrumb %>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-icon-text my-2 mr-2 main-save-btn" type="submit">
                            <%= translateLanguage('Save', session.translationdata) %>
                        </button>

                        <a href="/services" >
                            <button class="btn main-cancel-btn btn-icon-text my-2 mr-2" type="button">
                                <%= translateLanguage('Cancel', session.translationdata) %>
                            </button>
                        </a>

                    </div>
                </div>
                <!-- End Page Header -->
                <!-- Row -->
                <div class="row row-sm">
                    <div class="col-lg-12">
                        <% include ../partials/messages %>
                            <div class="card custom-card">
                                <input type="hidden" name="_csrf" value="<%-csrfToken%>">
                                <div class="card custom-card">
                                    <div class="card-body">
                                        <div class="inner__card_b1">
                                            <div class="row align-items-baseline mt-3">
                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card cke_required">
                                                                <b>
                                                                    <%= translateLanguage('Service Name',
                                                                        session.translationdata) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            </p>
                                                            <input type="text" maxlength="50"
                                                                value='<%= data && data.serviceName ? data.serviceName : '' %>'
                                                                class="form-control" id="serviceName" name="serviceName" required>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b>
                                                                    <%= translateLanguage('Price',
                                                                        session.translationdata) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            </p>
                                                            <input type="text" maxlength="50"
                                                                value='<%= data && data.price ? data.price : '' %>'
                                                                class="form-control" id="price" name="price" required>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>


                                            <div class="row align-items-baseline ">
                                                <div class="col-lg-12">
                                                    <div class="inner__border">
                                                        <div class="form-group form-check d-flex align-items-baseline">
                                                            <p class="inner__card">
                                                                <b>
                                                                    <%= translateLanguage('Service Description',
                                                                        session.translationdata) %>
                                                                </b>
                                                                <span style="color:red;">*</span></b>
                                                            </p>
                                                            </p>
                                                            <textarea class="form-control" id="serviceDescription" name="serviceDescription" required><%= data && data.serviceDescription ? data.serviceDescription : '' %></textarea>
                                                      
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                    
                                        </div>
                                    </div>
                            </div>
                            </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- End Row -->
    </div>
</div>
<!-- End Main Content-->

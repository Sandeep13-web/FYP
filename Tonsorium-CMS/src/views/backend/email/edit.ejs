<!-- Main Content-->
<div class="main-content side-content pt-5">
    <div class="container-fluid">
        <div class="inner-body">
            <form action="/email-templates/<%= data._id %>?_method=PUT" method="post">
                <!-- Page Header -->
                <div class="page-header sticky-header">
                    <div>
                        <h2 class="main-content-title tx-24 mg-b-5">
                            <%= translateLanguage(pageTitle, session.translationdata) %>
                        </h2>
                        <% include ../partials/breadcrumb %>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-icon-text my-2 mr-2 main-save-btn" type="submit">
                            <%= translateLanguage('Save', session.translationdata) %>
                        </button>

                        <a href="/email-templates" >
                            <button class="btn main-cancel-btn btn-icon-text my-2 mr-2" type="button">
                                <%= translateLanguage('Cancel', session.translationdata) %>
                            </button>
                        </a>

                    </div>
                </div>
                <!-- End Page Header -->
                <!-- Row -->
                <div class="row row-sm">
                    <div class="col-lg-12">
                        <% include ../partials/messages %>
                            <div class="card custom-card">
                                <input type="hidden" name="_csrf" value="<%-csrfToken%>">
                                <div class="card-body">
                                    <div class="inner__card_b1">
                                        <div class="row align-items-baseline mt-3">
                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class="form-group form-check d-flex align-items-baseline">
                                                        <p class="inner__card cke_required">
                                                            <b>
                                                                <%= translateLanguage('Title',
                                                                    session.translationdata) %>
                                                            </b>
                                                            <span style="color:red;">*</span>
                                                        </p>
                                                        <input type="text" class="form-control" id="title"
                                                            value="<%= data.title %>" name="title" maxlength="50"
                                                            required>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row align-items-baseline ">
                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class="form-group form-check d-flex align-items-baseline">
                                                        <p class="inner__card">
                                                            <b>
                                                                <%= translateLanguage('Code',
                                                                    session.translationdata) %>
                                                            </b>
                                                            <span style="color:red;">*</span>
                                                        </p>
                                                        <input type="text" class="form-control" id="code" maxlength="50"
                                                            value="<%= data.code %>" name="code" readonly>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>


                                        <div class="row align-items-baseline ">
                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class="form-group form-check d-flex align-items-baseline">
                                                        <p class="inner__card">
                                                            <b>
                                                                <%= translateLanguage('Subject',
                                                                    session.translationdata) %>
                                                            </b>
                                                            <span style="color:red;">*</span>
                                                        </p>
                                                        <input type="text" class="form-control" id="subject"
                                                            value="<%= data.subject %>" name="subject" maxlength="50"
                                                            required>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row align-items-baseline ">

                                            <div class="col-lg-12">
                                                <div class="inner__border">
                                                    <div class=" form-check d-flex align-items-baseline">
                                                        <p class="inner__card">
                                                            <b>
                                                                <%= translateLanguage('Body',
                                                                    session.translationdata) %>
                                                            </b>
                                                            <span style="color:red;">*</span>
                                                        </p>
                                                        <div class="ext-textarea">
                                                            <textarea class="form-control tinymce" name="body" type="text"
                                                            id="email_body"><%= data.body %></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- End Row -->
    </div>
</div>
<!-- End Main Content-->

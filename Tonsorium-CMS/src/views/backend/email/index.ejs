<div class="main-content side-content pt-5">
    <div class="container-fluid">
        <div class="inner-body">
            <!-- Page Header -->
            <div class="page-header sticky-header">
                <div>
                    <h2 class="main-content-title tx-24 mg-b-5"><%= translateLanguage(pageTitle, session.translationdata) %></h2>
                    <% include ../partials/breadcrumb %>
                </div>
                <!-- <div class="page-title-actions">
                    <% if(checkPermissions(user, "email-templates.email-templates.create") == true) { %>
                        <a class="btn main-pg-btn btn-icon-text my-2 mr-2 pull-right" href="/email-templates/create"
                           role="button"><i
                                    class="fa fa-plus"></i> <%= translateLanguage('Add New', session.translationdata) %>
                        </a>
                    <% } %>
                </div> -->
            </div>
            <!-- End Page Header -->
            <!-- Row -->
        </div>
        <!-- End Row -->
    </div>

    <div class="container-fluid">
        <div class="inner-body sticky-row">
            <div class="mt-2 mb-2">
                <% include ../partials/messages %>
            </div>
            <!-- Row -->
            <div class="row row-sm">
                <div class="col-lg-12">
                    <div class="card custom-card">
                        <div class="card-body">
                            <div class="table-responsive border">
                                <table class="table text__bold text-nowrap text-md-nowrap table-striped mg-b-0">
                                    <thead>
                                    <tr>
                                        <th><%= translateLanguage('Title', session.translationdata) %></th>
                                        <th><%= translateLanguage('Subject', session.translationdata) %></th>
                                        <th><%= translateLanguage('Code', session.translationdata) %></th>
                                        <% if(checkPermissions(user, "email-templates.email-templates.edit") == true || checkPermissions(user, "email-templates.email-templates.delete") == true ) { %>
                                            <th><%= translateLanguage('Action', session.translationdata) %></th>
                                        <% } %>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <%
                                    if(docs.length > 0){
                                    docs.forEach(function(email) {
                                    %>

                                        <tr>
                                            <td><%= email.title ? email.title : nil %></td>
                                            <td><%= email.subject ? email.subject : nil %></td>
                                            <td><%= email.code ? email.code : nil %></td>
                                            <% if(checkPermissions(user, "email-templates.email-templates.edit") == true || checkPermissions(user, "email-templates.email-templates.delete") == true ) { %>
                                                <td>
                                                    <% if(checkPermissions(user, "email-templates.email-templates.edit") == true ) { %>
                                                        <a class="btn btn-white  my-2 mr-2"
                                                           href="/email-templates/<%= email._id %>"
                                                        >
                                                            <i class="fa fa-edit"></i>
                                                            <%= translateLanguage('Edit', session.translationdata) %>
                                                        </a>
                                                    <% } %>
                                                        <% if(checkPermissions(user, "email-templates.email-templates.delete") == true ) { %>
                                                            <button type="button"
                                                                    class="btn btn-danger my-2 mr-2 btn-delete confirm-delete"
                                                                    data-toggle="modal"
                                                                    data-target="#confirmDeleteModal"
                                                                    data-href="/email-templates/<%= email._id %>?_method=delete"
                                                                    data-title="<%= translateLanguage('Delete Email Template', session.translationdata) %>"
                                                                    data-description=" <%= translateLanguage('Are you sure you want to delete?', session.translationdata) %>">
                                                                <i class="fa fa-trash-alt"> </i>
                                                                <%= translateLanguage('Delete', session.translationdata) %>
                                                            </button>
                                                        <% } %>
                                                </td>
                                            <% } %>
                                        </tr>

                                    <% });
                                    }else{
                                    %>
                                        <tr>
                                            <td colspan="4" style="text-align:center;">
                                                <%= translateLanguage('No Records found.', session.translationdata) %>
                                            </td>
                                        </tr>
                                    <% } %>

                                    </tbody>
                                </table>
                                <% if(docs.length > 0){ %>
                                    <% include ../partials/pagination %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Row -->
        </div>
    </div>

</div>